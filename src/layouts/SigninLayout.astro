---
import { SEO } from "astro-seo";
import Links from "../components/headers/Links.astro";
export interface Props {
	title: string;
	imageUrl?: string;
}

const { title, imageUrl } = Astro.props;
const logoUrl = imageUrl || "https://musicschool-metamorfosi.gr/logo.png";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<SEO
			charset="utf-8"
			title="Σχολή Βυζαντινής & Παραδοσιακής Μουσικής"
			description="Σχολή Βυζαντινής & Παραδοσιακής & Ευρωπαικής Μουσικής Ι.Ν. Μεταμορφώσεως Του Σωτήρος, Δήμου Μεταμορφώσεως"
			openGraph={{
				basic: {
					title,
					url: Astro.url,
					image: logoUrl,
					type: "website"
				},
				image: {
					url: logoUrl
				},
				optional: {
					locale: "el_GR"
				}
			}}
		/>
		<Links />
	</head>
	<body class="box-border h-[100dvh] p-0 grid bg-white grid-rows-[100%] overflow-hidden">
		<slot />
		<style is:inline>
			html {
				font-family: system-ui, sans-serif;
				height: 100vh;
			}
			p,
			a,
			button,
			h1,
			h2,
			h3 {
				color: #282828;
			}
			body {
				background: radial-gradient(ellipse at top, rgb(69 10 10 / 0.6), white);
			}
		</style>
	</body>
</html>
