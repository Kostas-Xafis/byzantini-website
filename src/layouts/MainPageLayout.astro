---
import { SEO } from "astro-seo";
import Navbar from "../components/Navbar.astro";
import Links from "../components/Links.astro";
import Contact from "../components/Contact.astro";
import ContactPhone from "../components/ContactPhone.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props;
const logoUrl = "https://musicschool-metamorfosi.gr/favicon.ico";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="msvalidate.01" content="A0B6D45A8BC2F8C6E524CB74A0C73B6F" />

		<SEO
			charset="utf-8"
			title="Σχολή Βυζαντινής & Παραδοσιακής Μουσικής"
			description="Σχολή Βυζαντινής & Παραδοσιακής Μουσικής Ι.Ν. Μεταμορφώσεως Του Σωτήρος, Δήμου Μεταμορφώσεως"
			openGraph={{
				basic: {
					title,
					url: Astro.url,
					image: logoUrl,
					type: "website"
				},
				image: {
					url: logoUrl
				},
				optional: {
					locale: "el_GR"
				}
			}}
			extend={{
				link: [
					{ rel: "icon", href: "/logo_small.png" },
					{ rel: "sitemap", href: "/sitemap-index.xml" },
					{ rel: "robots", href: "/sitemap-index.xml" }
				],
				meta: [
					{
						name: "facebook:image",
						content: logoUrl
					},
					{
						name: "messenger:image",
						content: logoUrl
					},
					{
						name: "viber:image",
						content: logoUrl
					}
				]
			}}
		/>
		<Links />
		<style is:inline>
			html {
				font-family: "Gothic Didact" system-ui, sans-serif;
				height: 100dvh;
			}
			p,
			a,
			button,
			h1,
			h2,
			h3,
			li {
				color: #282828;
			}
			select {
				background-color: white;
			}
			input[type="number"] {
				-moz-appearance: textfield;
				appearance: textfield;
			}
			input::-webkit-outer-spin-button,
			input::-webkit-inner-spin-button {
				display: none;
			}
			.glass {
				--tw-bg-opacity: 0.45;
				background: rgb(127 29 29 / var(--tw-bg-opacity));
				backdrop-filter: blur(4px);
				border: 1px solid rgb(153 27 27 / 0.3);
			}
			.heading::after {
				content: "";
				position: absolute;
				bottom: 0;
				height: 4px;
				transform: translateX(-120%);
				transition: transform 0.5s ease-in-out;
				border-radius: 3px;
			}
			.heading:is(.emphasis)::after {
				transform: translateX(0px);
			}
			@keyframes fadeIn {
				0% {
					opacity: 0.0001;
				}
				100% {
					opacity: 1;
				}
			}
			@keyframes fadeInParent {
				0% {
					transform: translateY(25px);
				}
				100% {
					transform: translateY(0px);
				}
			}
			@keyframes fadeInLeft {
				0% {
					opacity: 0.0001;
					transform: translateX(-2rem);
				}
				80% {
					opacity: 1;
				}
				100% {
					opacity: 1;
					transform: translateX(0px);
				}
			}
		</style>
	</head>
	<body class="box-border h-[100dvh] p-0 grid bg-white grid-rows-1 max-sm:grid-rows-[calc(100dvh_-_40px)_40px] max-sm:overflow-y-auto">
		<Navbar />
		<div class="relative w-full h-full sm:overflow-auto grid grid-rows-[100%]">
			<slot />
		</div>
		<Contact />
		<ContactPhone />
	</body>
</html>
