---
const links = [
	{ name: "Αρχική", url: "/admin" },
	{ name: "Εγγραφές", url: "/admin/registrations" },
	{ name: "Βιβλία", url: "/admin/books" },
	{ name: "Οφειλές Μαθητών", url: "/admin/payments" },
	{ name: "Οφειλές Σχολής", url: "/admin/payoffs" },
	{ name: "Καθηγητές", url: "/admin/teachers" },
	{ name: "Παραρτήματα", url: "/admin/locations" },
	{ name: "Διαχειριστές", url: "/admin/sysusers" }
];
---

<nav class="pt-8 grid grid-rows-[80px_1fr] bg-red-900 overflow-y-auto overflow-x-hidden">
	<div class="relative grid place-items-center gap-x-4 font-anaktoria">
		<a href="/" class="logoImg w-[80px] row-span-full aspect-square z-20">
			<div class="w-full h-full bg-red-50"></div>
			<img class="hidden" src="/logo.png" alt="Λογότυπο Σχολής" />
		</a>
		<!-- 50% width - 40px (50% of img) - 2px offset -->
		<div class="logoImg w-[80px] aspect-square absolute top-[1px] blur-2xl z-10 left-[calc(50%_-_40px_-_2px)]">
			<div class="w-full h-full bg-[rgb(0_0_0_/_0.75)]"></div>
		</div>
	</div>
	<div class={`grid auto-rows-min grid-cols-1 grid-flow-row self-start py-2 gap-y-1`}>
		{
			links.map(link => (
				<a
					class="group relative py-4 grid grid-rows-[minmax(min-content, 70px)] place-content-center hover:bg-red-950 drop-shadow-[-3px_1px_2px_rgba(0,0,0,0.35)]"
					href={link.url}
					rel="prefetch-intent"
				>
					<div class="group px-8 font-bold font-anaktoria text-2xl text-red-50 text-center">{link.name}</div>
				</a>
			))
		}
	</div>
	<style is:inline>
		.logoImg {
			mask-image: url("/logo.png");
			-webkit-mask-image: url("/logo.png");
			mask-size: contain;
			-webkit-mask-size: contain;
		}
	</style>
</nav>
