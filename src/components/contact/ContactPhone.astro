	<style is:inline>
		#phoneContact > div {
			transition: transform 0.2s ease-in-out;
		}
		#phoneContact i,
		#phoneContact p {
			text-shadow: -1px 1px 2px rgb(24, 24, 24, 0.75);
		}
		#phoneContact:is(.clickedContacts) > div {
			transform: translateY(-100%);
		}
		#showPhoneContacts i {
			transition: transform 0.2s ease-in-out;
		}
		#phoneContact:is(.clickedContacts) #showPhoneContacts i {
			transform: rotateZ(180deg) translateY(calc(-1rem * 0.5));
		}
		.copy:is(.clicked) {
			background-color: rgb(22, 163, 74);
		}
	</style>
	<script is:inline>
		(function () {
			let onElementMount = async (target, callback) => {
				let count = 0;
				while (!document.querySelector(target) && count++ < 50) {
					await new Promise(resolve => setTimeout(resolve, 50));
				}
				if (count >= 10) return;
				callback();
			};
			onElementMount("#phoneContact", () => {
				// delete the phoneContact element if the use is on his phone
				const phoneContact = document.querySelector("#phoneContact");
				if (!window.matchMedia("(max-width: 640px)").matches) phoneContact.remove();
				else phoneContact.classList.replace("hidden", "grid");
			}).then(() => {
				if (window.matchMedia("(max-width: 640px)").matches) {
					onElementMount("#showPhoneContacts", () => {
						const btn = document.querySelector("#showPhoneContacts");
						const phoneContact = document.querySelector("#phoneContact");
						btn.addEventListener("click", () => {
							phoneContact.classList.toggle("clickedContacts");
						});
					});
				}
			});
		})();
	</script>
</div>
