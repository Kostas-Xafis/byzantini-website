---
import par from "../../../assets/par.jpg";
import byz from "../../../assets/byz.jpeg";
import eur from "../../../assets/eur.jpg";
import { Image } from "astro:assets";


const enum MusicType {
    Byzantine = "byz",
    Traditional = "par",
    European = "eur",
}

export interface Props {
    type: "byz" | "par" | "eur";
}


const {type} = Astro.props
---
<>
    {
        type === MusicType.Byzantine ? <Image src={byz} alt=""/> :
        type === MusicType.Traditional ? <Image src={par} alt=""/> :
        type === MusicType.European ? <Image src={eur} alt=""/> : <></>
    }
</>