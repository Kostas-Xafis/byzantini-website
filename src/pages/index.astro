---
import MainPageLayout from "../layouts/MainPageLayout.astro";
import Landing from "../components/mainpage/Landing.astro";
import Lessons from "../components/mainpage/Lessons.astro";
export const prerender = true;
---

<MainPageLayout title="Σχολή Βυζαντινής & Παραδοσιακής Μουσικής">
	<div id="landing-page" class="w-full h-full grid auto-rows-max grid-flow-row grid-cols-1 overflow-y-scroll">
		<Landing />
		<Lessons />
	</div>
</MainPageLayout>
<style is:global>
	@keyframes fadeIn {
		0% {
			opacity: 0.0001;
		}
		100% {
			opacity: 1;
		}
	}
	@keyframes fadeInParent {
		0% {
			transform: translateY(25px);
		}
		100% {
			transform: translateY(0px);
		}
	}
	@keyframes fadeIn2 {
		0% {
			opacity: 0.0001;
			transform: translateX(-1rem);
		}
		100% {
			opacity: 1;
			transform: translateX(0px);
		}
	}
</style>
